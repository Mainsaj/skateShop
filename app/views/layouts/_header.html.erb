<header>
    <figure>
        <%= link_to (image_tag 'logo.png', size: "70x70"), home_index_path%>
    </figure>
    <h1>Skate Shop Online</h1>
    <h2 style="background-color:white;border:0.1em solid black;padding-top:1.5em"><%= link_to "Search", home_search_path %></h2>
    
    
    <h2 style="background-color:white;border:0.1em solid black">
		<% if session[:user_id].nil? %>
			<%= link_to "New Customer", new_customer_path %>
			<%= button_to 'Login', login_path, :method => :get %>
		<% else %>
			Hello <%= Customer.find(session[:user_id]).last_name %> !
			<%= button_to 'Logout', logout_path, :method => :delete %>
		<% end %>
    
</h2>
</header>

<nav>
    <h3><%= link_to "Home", home_index_path %></h3>
    <h3><%= link_to "Contact", home_contact_path %></h3>
    <h3><%= link_to "About", home_about_path %></h3>
    <h3><%= link_to "Customers", customers_path %></h3>
    <h3><%= link_to "Products", products_path %></h3>
    <h3><%= link_to "Sales", sales_path %></h3>
    <h3><%= link_to "Reports", home_reports_path %></h3>
    <h3><%= link_to "Catalog", home_catalog_path %></h3>
    <h3><%= link_to "Cart", home_cart_path %></h3>
</nav>


